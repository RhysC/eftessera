<?xml version="1.0" ?>

<project name="build-repos" default="build" basedir="." xmlns:artifact="antlib:org.apache.maven.artifact.ant" >


  <artifact:remoteRepository id="java.net" url="http://download.java.net/maven/2/" /> 

  <artifact:localRepository id="local" path="${user.home}/.m2/repository/" /> 

	<artifact:remoteRepository id="openwager.thirdparty" url="http://${maven.host}:${maven.port}/nexus/content/repositories/thirdparty/" >
		<authentication username="${maven.username}" password="${maven.password}" />
	</artifact:remoteRepository>
	
	<artifact:remoteRepository id="openwager.releases" url="http://${maven.host}:${maven.port}/nexus/content/repositories/releases/" >
		<authentication username="${maven.username}" password="${maven.password}" />
	</artifact:remoteRepository>
	
	<artifact:remoteRepository id="openwager.snapshots" url="http://${maven.host}:${maven.port}/nexus/content/repositories/snapshots/" >
	  <artifact:snapshots updatePolicy="always" /> 
	  <authentication username="${maven.username}" password="${maven.password}" />
	</artifact:remoteRepository>
</project>

